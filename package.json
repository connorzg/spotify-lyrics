{
  "name": "lyrics-for-spotify",
  "productName": "Lyrics for Spotify",
  "version": "1.1.0",
  "description": "Lyrics companion desktop app for Spotify",
  "keywords": [
    "spotify",
    "lyrics",
    "desktop"
  ],
  "main": "app/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dieb/spotify-lyrics.git"
  },
  "bugs": {
    "url": "https://github.com/dieb/spotify-lyrics/issues"
  },
  "author": "Andre Dieb <andre.dieb@gmail.com> (http://andredieb.com)",
  "license": "CC0-1.0",
  "dependencies": {
    "axios": "^0.15.3",
    "electron-is-dev": "0.1.2",
    "forever-monitor": "^1.7.1",
    "json-loader": "0.5.4",
    "ps-node": "^0.1.4",
    "underscore": "^1.8.3",
    "vue": "2.1.7",
    "vue-async-computed": "2.2.1",
    "xmldom": "^0.1.27",
    "xpath": "0.0.23"
  },
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-core": "6.21.0",
    "babel-loader": "6.2.10",
    "babel-preset-es2015": "6.18.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.1.3",
    "css-loader": "0.26.1",
    "electron": "^1.4.12",
    "electron-builder": "^10.8.1",
    "extract-text-webpack-plugin": "1.0.1",
    "mocha": "^3.2.0",
    "node-sass": "4.1.1",
    "sass-loader": "4.1.1",
    "spectron": "^3.4.0",
    "style-loader": "0.13.1",
    "vue-loader": "10.0.2",
    "vue-style-loader": "1.0.0",
    "vue-template-compiler": "2.1.7",
    "webpack": "^1.14.0"
  },
  "scripts": {
    "test": "mocha",
    "app": "electron app",
    "dev": "webpack -w",
    "build": "cross-env NODE_ENV=production webpack",
    "prepush": "npm test",
    "postinstall": "install-app-deps",
    "pack": "npm run build && build --dir && babel --no-comments --compact --minified --out-file app/dist/bundle.js app/dist/bundle.js",
    "dist": "npm run build && build"
  },
  "build": {
    "appId": "com.andredieb.lyrics-for-spotify",
    "asar": false,
    "extend-info": "build/Info.plist",
    "linux": {
      "arch": [
        "ia32",
        "x64"
      ],
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ]
    },
    "win": {
      "target": [
        "squirrel"
      ]
    },
    "mac": {
      "category": "public.app-category.music"
    },
    "dmg": {
      "backgroundColor": "#f8f9fa",
      "icon": "build/icon.icns",
      "iconTextSize": "13",
      "window": {
        "width": 485,
        "height": 330
      },
      "contents": [
        {
          "x": 100,
          "y": 100
        },
        {
          "x": 375,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
